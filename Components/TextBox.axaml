<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 Name="Control"
             x:Class="ModAPI.Components.TextBox">
	<StackPanel Classes="Input" HorizontalAlignment="Stretch">
		<TextBlock Text="{Binding #Control.Label}" />
		<Border>
			<Grid HorizontalAlignment="Stretch">
				<TextBox Grid.Column="0" Text="{Binding #Control.Value, Mode=TwoWay}" HorizontalAlignment="Stretch" />
			</Grid>
		</Border>
	</StackPanel>
</UserControl>
